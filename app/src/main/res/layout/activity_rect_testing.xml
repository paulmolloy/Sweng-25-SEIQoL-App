<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rect_testing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sweng.seiqol_app.RectTesting">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Touch screen to intialise bar. Drag to increase size. Really buggy right now."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />


        <com.example.sweng.seiqol_app.DraggableBarChart
            android:text="Bar"
            android:layout_width="match_parent"
            android:layout_height="403dp"
            android:id="@+id/dView" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:onClick="onRadioButtonClicked"
            android:id="@+id/rBG0"

            >

            <RadioButton
                android:text="Bar 0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radioButton0"
                android:layout_weight="1" />

            <RadioButton
                android:text="Bar 1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radioButton1"
                android:layout_weight="1" />
            <RadioButton
                android:text="Bar 2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radioButton2"
                android:layout_weight="1" />
            <RadioButton
                android:text="Bar 3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radioButton3"
                android:layout_weight="1" />
            <RadioButton
                android:text="Bar 4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radioButton4"
                android:layout_weight="1" />
        </RadioGroup>

    </LinearLayout>
</RelativeLayout>
