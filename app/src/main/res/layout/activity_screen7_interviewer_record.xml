<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rect_testing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sweng.seiqol_app.Screen7InterviewerRecord">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="For Interviewer\n:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textStyle="bold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            >


            <TextView
                android:text="Time Taken:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time_taken_heading_tv"
                android:layout_weight="2"
                android:textStyle="bold"/>

            <TextView
                android:text="0 Hrs , 00 Mins and 00 Secs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time_taken_tv"
                android:layout_weight="1"/>
        </LinearLayout>



        <TextView
            android:text="Understanding of Method:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/understanding_heading_tv"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="vertical"
            android:onClick="onRadioButtonClicked"
            android:id="@+id/understanding_rbg"
            android:layout_weight="1"
            >

            <RadioButton
                android:text="Not Understood"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/understanding_0_rb"
                android:layout_weight="1" />

            <RadioButton
                android:text="Poor Understanding"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/understanding_1_rb"
                android:layout_weight="1" />
            <RadioButton
                android:text="Understood"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/understanding_2_rb"
                android:layout_weight="1" />

        </RadioGroup>


        <TextView
            android:text="Fatigue/Boredom:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/boredom_heading_tv"
            android:textStyle="bold"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:orientation="vertical"
            android:onClick="onRadioButtonClicked"
            android:id="@+id/boredom_rbg"
            android:layout_weight="1"
            >

            <RadioButton
                android:text="None"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/boredom_0_rb"
                android:layout_weight="1" />

            <RadioButton
                android:text="Some"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/boredom_1_rb"
                android:layout_weight="1" />
            <RadioButton
                android:text="A lot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/boredom_2_rb"
                android:layout_weight="1" />

        </RadioGroup>

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:inputType="textPersonName"-->
            <!--android:text="Name"-->
            <!--android:ems="10"-->
            <!--android:id="@+id/inte"-->
            <!--android:hint="Enter Interviewer Id"-->
            <!--/>-->

        <!--<EditText-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:inputType="numberDecimal"-->
            <!--android:ems="10"-->
            <!--android:id="@+id/respondant_id_et"-->
            <!--android:hint="@string/edit_message"-->

            <!--/>-->



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:gravity="center|bottom"
            >


            <Button
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/back_7"
                android:layout_weight="1" />


            <Button
                android:text="Save Results to CSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next_7"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
